<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.igalanews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IgalaNews">
        <activity
            android:name=".util.UserSignUpActivity"
            android:exported="false" />
        <activity
            android:name=".util.VerifyOTP"
            android:exported="false" />
        <activity
            android:name=".util.SignUp3rdUserActivity"
            android:exported="false" />
        <activity
            android:name=".util.SignUpUserActivity"
            android:exported="false" />
        <activity
            android:name=".util.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".FacebookAuthActivity"
            android:exported="false" />
        <activity
            android:name=".webView"
            android:exported="false" />
        <activity
            android:name=".util.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:exported="false" />
        <activity
            android:name=".util.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".util.SplashLoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>